<% layout("layouts/boilerplate") %>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container mb-5 mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Title -->
            <h2 class="mb-4"><%= listing.title %></h2>

            <!-- Image Card -->
            <div class="card shadow-sm rounded mb-4 border-0 overflow-hidden">
                <img src="<%= listing.image.url %>" alt="listing image" class="w-100" style="object-fit: cover; max-height: 500px;">
                <div class="card-body p-4">
                    <p class="mb-1 ps-4 mt-2">Hosted by <span class="fw-bold text-primary">@<%= listing.owner.username %></span></p>
                    <p class="text-muted ps-4"><%= listing.description %></p>

                    <ul class="list-unstyled mt-3 ps-4">
                        <li ><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></li>
                        <li><strong>Location:</strong> <%= listing.location %></li>
                        <li><strong>Country:</strong> <%= listing.country %></li>
                    </ul>
                </div>
            </div>

            <!-- Owner Action Buttons -->
            <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
                <div class="d-flex justify-content-start gap-3 mb-4">
                    <a href="/<%= listing._id %>/edit" class="btn btn-outline-primary">Edit</a>
                    <form method="POST" action="/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
            <% } %>

            <!-- Leave a Review -->
            <% if(currUser) { %>
                <div class="card shadow-sm border-0 mb-5 p-4">
                    <div class="card-body p-3">
                        <h4 class="mb-4">Leave a Review</h4>
                        <form action="/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label class="form-label">Rating</label>
                                <fieldset class="starability-slot">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>" />
                                        <label for="rate<%= i %>" title="<%= i %> star"><%= i %> stars</label>
                                    <% } %>
                                </fieldset>
                            </div>
                            <div class="mb-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                                <div class="invalid-feedback">Please enter a comment</div>
                            </div>
                            <button class="btn btn-dark">Submit</button>
                        </form>
                    </div>
                </div>
            <% } %>

            <!-- All Reviews -->
            <% if(listing.reviews.length > 0) { %>
                <div class="mb-5">
                    <h4 class="mb-4">All Reviews</h4>
                    <div class="row g-4">
                        <% listing.reviews.forEach(review => { %>
                            <div class="col-md-6">
                                <div class="card h-100 shadow-sm border-0 p-3">
                                    <div class="card-body">
                                        <h6 class="card-title">@<%= review.author.username %></h6>
                                        <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
                                        <p class="card-text text-muted"><%= review.comment %></p>
                                        <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                            <form method="POST" action="/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% } %>

            <!-- Map Section -->
            <div class="mb-4">
                <h4 class="mb-3">Where you'll be</h4>
                <div id="map" class="rounded w-100" ></div>
            </div>
        </div>
    </div>
</div>

<script src="/js/script.js"></script>
<script src="/js/map.js"></script>
