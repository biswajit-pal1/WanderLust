<% layout("layouts/boilerplate") %>
<div id="filters" class="px-3">
    <div class="filter">
        <a href="/wanderlust/explore/trending">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/iconic-cities">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/mountains">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/castles">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/amazing-pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/camping">
            <div><i class="fa-solid fa-tents"></i></div>
            <p>Camping</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/farms">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/arctic">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/domes">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </a>
    </div>
    <div class="filter">
        <a href="/wanderlust/explore/boats">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </a>
    </div>

    <div class="tax-toggle ms-auto">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>

<% if (typeof searchQuery !== 'undefined' && allListings.length > 0) { %>
  <h5>Search results for "<%= searchQuery %>":</h5>
<% } %>

<% if (typeof searchQuery !== 'undefined' && allListings.length === 0) { %>
  <h4 class="text-center text-muted my-5">
    No listings found for "<%= searchQuery %>"<br>
    <small>Try a different keyword.</small>
  </h4>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 mt-3">
    
    <% for(listing of allListings) { %>
    <a href="/wanderlust/<%= listing._id %>" class="listing-links">
        <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                </p>
            </div>
        </div>
    </a>
    <% } %>
</div>